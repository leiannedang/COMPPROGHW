
// Create a program that will accept integer values for month, day, and year and then output the "long version" of the specified date.
// For example, if month = 11, day = 5, and year = 2010, out the string, "November 5, 2010". 
// If there is any invalid input, display "Invalid date!" and end the program. 

// Lei-Ann Edang (Eng 1-12)

#include <iostream>
#include <conio.h>

using namespace std;

int main()

{
	int month, day, year;
	
	cout << endl;
//	cout << "1 January \n2 February \n3 March \n4 April \n5 May \n6 June \n";
//	cout << "7 July \n8 August \n9 September \n10 October \n11 November \n12 December \n";
//	cout << "\n \n \n";
	
	cout << "Enter month: "; cin >> month;
	cout << "Enter day: "; cin >> day;
	cout << "Enter year: "; cin >> year;
	

			switch(month)
		{
			case 2: if (day>0 && day<=28)
		 				cout << "February " <<day << ", " << year << endl; 
		 			else 
					 	cout << "Invalid date! \n"; break;
	
			
			case 4: if(day>0 && day<=30)
	 					cout<< "April "<< day << ", " << year << endl; 
			 		else 
				 		cout << "Invalid date! \n"; break; 
			case 6: if(day>0 && day<=30)
	 					cout<< "June "<< day << ", " << year << endl; 
			 		else 
				 		cout << "Invalid date! \n"; break; 
			case 9: if(day>0 && day<=30)
						cout << "September " << day << ", " << year << endl; 
				 	else 
				 		cout << "Invalid date! \n"; break;
			case 11: if(day>0 && day<=30)
						cout << "November " << day << ", " << year << endl; 
	 				else 
				 		cout << "Invalid date! \n"; break;
			
			
			case 1:	if (day>0 && day<=31)
			 			cout << "January " << day << ", " << year << endl; 
					else cout << "Invalid date! \n"; break;
			case 3: if (day>0 && day<=31)
						cout << "March " << day << ", " << year << endl;
					else 
						cout << "Invalid date! \n"; break;
			case 5: if (day>0 && day<=31)
			 			cout << "May " << day << ", " << year << endl; 
					else 
						cout << "Invalid date! \n"; break;
			case 7: if (day>0 && day<=31)
						cout << "July " << day << ", " << year << endl; 
					else 
						cout << "Invalid date! \n"; break;
			case 8: if (day>0 && day<=31)
						cout << "August " << day << ", " << year << endl; 
					else 
						cout << "Invalid date! \n"; break;
			case 10: if (day>0 && day<=31)
						cout << "October " << day << ", " << year << endl; 
					else
					    cout << "Invalid date! \n"; break;
			case 12: if (day>0 && day<=31)
						cout << "December " << day << ", " << year << endl; 
					else 
						cout << "Invalid date! \n"; break;
			default: cout << "Invalid date! \n";
		}
	
		
	_getch();
	return 0;
}
